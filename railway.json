{
  "services": [
    {
      "name": "api",
      "build": {
        "dockerfile": "api/Dockerfile"
      },
      "env": {
        "NODE_ENV": "production"
      },
      "port": 3000
    },
    {
      "name": "client",
      "build": {
        "dockerfile": "client/Dockerfile"
      },
      "env": {
        "NODE_ENV": "production",
        "API_URL": "http://api:3000"
      },
      "port": 3001
    }
  ]
}
